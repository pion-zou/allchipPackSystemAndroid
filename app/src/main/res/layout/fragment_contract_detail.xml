<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    <LinearLayout
        android:id="@+id/contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/darker_gray">
        <TextView
            android:id="@+id/name"
            style="@style/contract_detail_text"
            tools:text="合同号:"
            />
        <TextView
            android:id="@+id/creator"
            style="@style/contract_detail_text"
            />
        <TextView
            android:id="@+id/time"
            style="@style/contract_detail_text"
            />
        <TextView
            android:id="@+id/state"
            style="@style/contract_detail_text"
            />
        <TextView
            android:id="@+id/last_update"
            style="@style/contract_detail_text"
            />
        <TextView
            android:id="@+id/editor"
            style="@style/contract_detail_text"
            />
        <TextView
            android:id="@+id/public_time"
            style="@style/contract_detail_text"
            />
        <TextView
            android:id="@+id/mark"
            style="@style/contract_detail_text"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/contract">
        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新"/>
        <Button
            android:id="@+id/btn_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收起"/>
        <Button
            android:id="@+id/btn_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打包"/>
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/layout_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/controller"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_good"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>